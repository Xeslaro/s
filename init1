#!/bin/bash
PATH=/sbin:/usr/sbin:/bin:/usr/bin
echo sending all process the term signal...
killall5 -15
echo sending all process the kill signal...
killall5 -9
echo deactive swap partitions...
swapoff -a
echo save system clock to hardware...
hwclock -w
echo remount root filesystem readonly...
mount -v -o remount,ro /
sync
echo umounting all filesystems...
umount -v -a -t nodevtmpfs
case $RUNLEVEL in
	1)	echo rebooting...
		reboot -f
	;;
	2)	echo bye...
		poweroff -f
	;;
esac
